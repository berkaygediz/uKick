{
  "name": "uKick â€” Block Everything & Stream Tweaks",
  "short_name": "uKick",
  "version": "1.1.3",
  "manifest_version": 3,
  "description": "All-in-one extension to block, boost, and tweak everything on Kick for a better streaming experience.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://kick.com/*",
    "https://www.kick.com/*"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://kick.com/*",
        "https://www.kick.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "uKick",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "homepage_url": "https://github.com/berkaygediz/uKick",
  "browser_specific_settings": {
    "gecko": {
      "id": "ukick@berkaygediz",
      "strict_min_version": "126.0"
    }
  }
}
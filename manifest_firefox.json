{
  "name": "uKickBlock â€” Block & Filter Streamers, Channels, Categories, and Chat on Kick",
  "short_name": "uKickBlock",
  "version": "1.1.0",
  "manifest_version": 3,
  "description": "Block and filter streamers, channels, categories, and chat messages on Kick.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://kick.com/*",
    "https://www.kick.com/*"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://kick.com/*",
        "https://www.kick.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "uKickBlock",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "homepage_url": "https://github.com/berkaygediz/uKickBlock",
  "browser_specific_settings": {
    "gecko": {
      "id": "ukickblock@berkaygediz",
      "strict_min_version": "109.0"
    }
  }
}
